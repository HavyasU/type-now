{
  "plugins": ["prettier-plugin-tailwindcss"],
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "bracketSameLine": true,
  "singleAttributePerLine": true,
  "endOfLine": "lf",
  "tailwindFunctions": ["clsx", "classnames", "cva"]
}
